<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.doc-oriented-ws.org/BookLookup/"
        xmlns="http://www.doc-oriented-ws.org/BookLookup/">
    <xsd:complexType
            name="LookupRequest">
        <xsd:sequence>
            <xsd:element
                    name="isbn"
                    type="xsd:string"
                    maxOccurs="unbounded"
                    minOccurs="0">
            </xsd:element>
            <xsd:element
                    name="title"
                    type="xsd:string"
                    maxOccurs="unbounded"
                    minOccurs="0">
            </xsd:element>
            <xsd:element
                    name="author"
                    type="xsd:string"
                    maxOccurs="unbounded"
                    minOccurs="0">
             </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType
            name="LookupResponse">
        <xsd:sequence>
            <xsd:element
                    name="summary"
                    maxOccurs="unbounded"
                    minOccurs="0"
                    type="summary">
            </xsd:element>
            <xsd:element
                    name="detail"
                    maxOccurs="unbounded"
                    minOccurs="0"
                    type="detail">
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType
            name="detail">
        <xsd:sequence>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="isbn"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="title"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="unbounded"
                    name="author"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="publisher"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="dateOfPublication"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="0"
                    maxOccurs="unbounded"
                    name="review"
                    type="review">
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType
            name="summary">
        <xsd:sequence>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="isbn"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="title"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="unbounded"
                    name="author"
                    type="xsd:string">
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType
            name="review">
        <xsd:sequence>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="reviewer"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="reviewText"
                    type="xsd:string">
            </xsd:element>
            <xsd:element
                    minOccurs="1"
                    maxOccurs="1"
                    name="rating"
                    type="xsd:string">
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>
    <xsd:element name="LookupRequest" type="LookupRequest"></xsd:element>
    <xsd:element name="LookupResponse" type="LookupResponse"></xsd:element>
</xsd:schema>